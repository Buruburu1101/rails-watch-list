<%= render 'navbar' %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://open-stand.org/wp-content/uploads/2016/04/International-Union-of-Cinemas-Calls-for-Open-Standards-in-the-Cinema-Industry.jpg);">
  <div class="container">
    <h1>Save Any Kind of Movies</h1>
  </div>
</div>
<h1>My Movie Lists</h1>
<div class="row">
      <% @lists.each do |list|%>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list_path(list) %>
          </div>
      <% end %>
</div>
<%= link_to "Create a movie list", new_list_path(@list), class: "btn btn-gradient" %>
